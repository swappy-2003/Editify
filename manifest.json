{
    "manifest_version": 3,
    "name": "editify",
    "version": "1.0",
    "description": "Make the current webpage editable.",
    
    "permissions": [
      "activeTab",
      "storage"
    ],
    
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    
    "background": {
      "service_worker": "background.js"
    },
    
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  